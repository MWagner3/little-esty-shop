<%= link_to "New Merchant", "/admin/merchants/new"%>

<h3> Enabled Merchants </h3>
<div id="enabled">
  <% @merchants.enabled.each do |merchant| %>
    <div id="enabled_merchant-<%=merchant.id%>">
        <%= link_to merchant.name, "/admin/merchants/#{merchant.id}"%>
        <%= button_to "Disable", "/admin/merchants/#{merchant.id}", method: :patch, params: { disable: 0 }  %>
    </div>
  <% end %>
</div>

<h3> Disabled Merchants </h3>
<div id="disabled">
  <% @merchants.disabled.each do |merchant| %>
    <div id="disabled_merchant-<%=merchant.id%>">
      <%= link_to merchant.name, "/admin/merchants/#{merchant.id}"%>
      <%= button_to "Enable", "/admin/merchants/#{merchant.id}", method: :patch, params: { enable: 1 } %>
    </div>
  <% end %>
</div>

<h3> Top 5 Merchants </h3>
<ol>
  <% @merchants.top_five_merchants.each do |merchant| %>
    <div id="top-merchant-<%=merchant.id%>">
      <li>
        <%= link_to merchant.name, "/admin/merchants/#{merchant.id}"%>
        <br>
      </li>
    </div>
  <% end %>
</ol>
